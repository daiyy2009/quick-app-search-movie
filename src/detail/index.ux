<script>

    import prompt from '@system.prompt'
    import fetch from '@system.fetch'
    import storage from '@system.storage'

    export default {
        data: {
            title: "详情",
            movieDetail: {
                year: '0000',
                images: [],
                casts: [],
                genres: [],
                countries: [],
                directors: [],
                rating: { average: 0 },
                ratings_count: ''
            },
            directors: '',
            casts: '',
            detailUrl: 'http://api.douban.com/v2/movie/subject/',
        },
        onInit: function () {
            this.$page.setTitleBar({ text: this.movieTitle })
            this._loadDetailData();
        },
        _loadDetailData: function() {
            // ----- use mock data begin ------
            // this.movieDetail = Object.values(this.$app.$def.mock.movieData)[2]
            // this._handleData(this.movieDetail);
            // return
            // ----- use mock data end   ------
            let localData = storage.get({
                key: `detail-${this.movieId}`,
                success: (data) => {
                    if (data) {
                        this._handleData(JSON.parse(data))
                    } else {
                        this._fetchData()
                    }
                },
                fail: (error) => {
                    this._fetchData()
                }
            });
        },
        _fetchData: function () {
            let url = `${this.detailUrl}${this.movieId}`
            fetch.fetch({
                url,
                success: (result) => {
                    let dataObj = JSON.parse(result.data)

                    if (dataObj.code === 112) {
                        prompt.showToast({
                            message: "对不起，已到达API调用次数限制，请1分钟后再使用本软件。"
                        })
                        return
                    }

                    this._handleData(dataObj);
                    this._upsertStorage(`detail-${this.movieId}`, result.data);

                },
                fail: function (data, code) {
                    prompt.showToast({
                        message: "数据加载失败"
                    })
                }
            })
        },
        _handleData: function (data) {
            this.movieDetail = data;
            this.directors = data.directors.map(v => v.name).join(' / ')
            this.casts = data.casts.map(v => v.name).join(' / ')
        },
        _upsertStorage: function (key, value) {
            storage.set({ key, value });
        }
    }
</script>
